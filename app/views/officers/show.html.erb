<% provide :page_title, "LOMFI Officers" %>

<div class="page-header">
  <h1>LOMFI Officers <%= @current_year ? @current_year.current_year : "" %></h1>
</div>



<% @users.each do |user| %>
    <table align="left" class="table table-bordered table-condensed img-left">
      <tbody>
      <tr>
        <td>
          <%= image_tag user.avatar.url(:medium) %></td>
      </tr>
      <tr>
        <td align="center">
          <h5><%= user.officers.upcase %></h5><h5><%= user.signature %></h5>
        </td>
      </tr>
      </tbody>
    </table> <p><%= user.biography %></p>
    <div class="clearfix"></div>
<% end %>

