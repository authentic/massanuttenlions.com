<% provide :page_title, "Edit Club Information" %>
<ul class="nav nav-pills">
  <li>
    <%= link_to({:controller => 'access', :action => 'menu'}, :class => "btn-primary") do %>
        <i class="icon-home icon-white"></i> Admin Home
    <% end %>
  </li>

  <li>
    <%= link_to({:action => 'list'}, :class => "btn-primary") do %>
        <i class="icon-th-list icon-white"></i> Club Information
    <% end %>
  </li>
  <li>
    <%= link_to(root_path, :class => "btn-primary") do %>
        <i class="icon-home icon-white"></i> Site Home
    <% end %>
  </li>

</ul>

<%= form_for(:club, :url => {:action => 'update', :id => @club.id}, :html => {:class => "form-horizontal"}) do |f| %>
    <div class="well span6 offset3">

      <fieldset>
        <legend><%= "Update Club Information".upcase %></legend>
        <%= render(:partial => "form", :locals => {:f => f}) %>
        <div class="control-group">
          <div class="controls">
            <%= f.submit "Update Club Information", :class => "btn-large" %>
          </div>
        </div>
      </fieldset>
    </div>
<% end %>

