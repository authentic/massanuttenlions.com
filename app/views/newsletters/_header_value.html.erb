<%= header_value do %>
    <table class='table table-condensed newsletter'>
      <tbody>
      <tr>
        <td width="70%"><h1 class='newsletter'> Mountain Lion <%= @newsletter.period.strftime("%B %Y") %></h1>


          <p><strong><%= @club.name %></strong> <br> <%= @club.mailing_address %> </p>

          <small>
            <% if @president %>
                <em><strong>President:</strong></em> <%= @president.signature %>
                <a href='mailto:#' target='_blank'> <%= @club.president_email %></a><br>
            <% end %>
            <% if @secretary %>
                <em><strong>Secretary:</strong></em> <%= @secretary.signature %>
                <a href='mailto:#' target='_blank'> <%= @club.secretary_email %></a><br>
            <% end %>
            <% if @editor %>
                <em><strong> Newsletter:</strong></em> <%= @editor.signature %>
                <a href='mailto:#' target='_blank'> <%= @club.newsletter_editor_email %></a><br>
            <% end %>
            <% if @photographer %>
                <em><strong>Photographer:</strong></em> <%= @photographer.signature %>
                <a href='mailto:#' target='_blank'> <%= @club.photographer_email %></a><br>
            <% end %>
          </small>
        </td>
        <td width="30%">
          <img alt='Mountain Lion' src='/ckeditor_assets/pictures/79/content_logonewsletter1.jpg?1348861857' class='img-circle'>
        </td>
      </tr>
      </tbody>
    </table>
    <hr class="hrLion">
<% end %>
